{
  "rules": {
    "users": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid"
      },
      ".indexOn": [
        "createdAt"
      ]
    },
    "reports": {
      "$reportKey": {
        ".read": "data.child('reporter').val() === auth.uid",
        ".write": true
      },
      ".indexOn": [
        "reporter",
        "reportee",
        "path"
      ]
    }
  }
}